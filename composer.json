{
    "name": "markp/wp-boilerplate",
    "description": "The WordPlate based WP boilerplate",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "wordplate",
        "wordpress"
    ],
    "require": {
        "php": "^8.2",
        "composer/installers": "^2.3",
        "roots/bedrock-autoloader": "^1.0.4",
        "roots/wordpress": "^6.6.1",
        "roots/wp-password-bcrypt": "^1.1",
        "symfony/http-foundation": "^7.1",
        "vlucas/phpdotenv": "^5.6",
        "wpackagist-plugin/updraftplus": "^1.24.0",
        "wpengine/advanced-custom-fields-pro" :  "^6.3",
        "wpackagist-plugin/classic-editor": "^1.6.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        },
        {
            "type":"composer",
            "url":"https://connect.advancedcustomfields.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "files": [
            "src/helpers.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}": [
                "type:wordpress-muplugin"
            ],
            "public/plugins/{$name}": [
                "type:wordpress-plugin",
                "wpengine/advanced-custom-fields-pro",
                "type:wordpress-plugin",
                "wpackagist-plugin/updraftplus",
                "type:wordpress-plugin",
                "wpackagist-plugin/classic-editor"

            ],
            "public/themes/{$name}": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public/wordpress"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
